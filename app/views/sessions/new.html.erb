<div class="d-flex flex-row">
  <div class="w-25 border p-3 ms-2">
    <h1><%= t '.title' %></h1>
    <%= form_with url:login_path do |form| %>
    <div class="form-group">
      <%= form.label :email, User.human_attribute_name(:email) %>
      <%= form.text_field :email, class: "form-control mb-3"  %>
    </div>
    <div class="form-group">
      <%= form.label :password, User.human_attribute_name(:password) %>
      <%= form.password_field :password, class: "form-control mb-3"  %>
    </div>
    <%= form.submit t('defaults.login'), class:'btn btn-primary d-block mb-3' %>
    <%= link_to t('.to_register_page'), signup_path, class: 'link-secondary d-inline-block ms-3' %>
    <%= link_to t('.password_forget'), password_reset_path, class: 'link-secondary d-inline-block ms-3' %>
    <% end  %>
  </div>
  <div class="">
    <div class="ms-3 lead">
      ログイン用メールアドレス
    </div>
    <div class="mb-3 ms-3">
      memo@gmail.com
    </div>
    <div class="ms-3 lead">
      パスワード
    </div>
    <div class="ms-3">
      1234
    </div>
  </div>
</div>