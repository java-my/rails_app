<%= form_with model: [article, comment], local: false, id: 'new_comment' do |form| %>
  <div class="mb-3">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control' %>
  </div>
  <div class="text-end mb-4">
    <%= form.submit class: 'btn btn-primary btn-sm' %>
  </div>
<% end %>